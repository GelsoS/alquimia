<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.fragments.MessagesFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chat de Mensagens"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tv_conversation_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID da Conversa: "
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tv_other_user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Outro UsuÃ¡rio ID: "
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tv_messages_status"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Carregando mensagens..."
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/white"
        android:padding="8dp"
        android:scrollbars="vertical"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/et_message_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite sua mensagem..."
        android:inputType="textMultiLine"
        android:maxLines="4"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btn_send_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enviar Mensagem"/>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="16dp"
    tools:context=".ui.profile.UserProfileActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meu Perfil"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>

    <ImageView
        android:id="@+id/iv_user_profile_picture"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@android:drawable/sym_def_app_icon"
        android:layout_marginBottom="24dp"
        tools:src="@tools:sample/avatars"/>

    <TextView
        android:id="@+id/tv_profile_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Carregando..."
        android:padding="8dp"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/btn_edit_profile_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar Perfil"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btn_upload_picture_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Foto de Perfil"/>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".AlquimiaApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Alquimia"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <!-- LoginActivity como a atividade inicial -->
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Alquimia">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Outras atividades -->
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="false"
            android:label="Main"
            android:theme="@style/Theme.Alquimia" />
        <activity
            android:name=".ui.register.RegisterActivity"
            android:exported="false"
            android:label="Register"
            android:theme="@style/Theme.Alquimia" />
        <activity
            android:name=".ui.activities.ForgotPasswordActivity"
            android:exported="false"
            android:label="Forgot Password"
            android:theme="@style/Theme.Alquimia" />
        <activity
            android:name=".ui.profile.UserProfileActivity"
            android:exported="false"
            android:label="User Profile"
            android:theme="@style/Theme.Alquimia" />

        <!-- Adicione aqui outras atividades conforme necessÃ¡rio -->

    </application>
</manifest>
